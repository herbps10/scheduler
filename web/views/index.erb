


<div id="sliders">
    <input type='text' id='departments-search' size='6' />
    <input type='text' id='courses-search' size='40' />
	<ul class="departments">
		<% @data.departments.each do |department| %>

			<li class = "department <%= department.title %>">
				<a  class = "department-title"><%= department.title %></a>

				<ul class = "courses" >

					<% department.courses.each do |course| %>

						<li class= "course <%= course.title %>">

							<a  class = "course-title"><span class="course_number"><%= course.courseNumber %>:</span> <%= course.title %></a>

							<ul class="sections">

								<% course.sections.each do |section| %>

									<li class="section" rel='<%= section.crn %>'>
										<% if section.time.tba == true %>
											<span class='time'>Time TBA</span>
										<% else %>
											<span class='days'><%= section.time.prettyDays %>:</span> <span class='time'><%= section.time.prettyTime %></span>
										<% end %>

										<br/><span class='instructor'><%= section.instructor %></span>
										<span class='crn'><a href='#'>
											<%= section.crn %></span>
										</a>
									</li>

								<% end %>
							</ul>
						</li>
				 	<% end %>
				</ul>
			</li>
		<% end %>
	</ul>
</div>
